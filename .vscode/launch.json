{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Gilded Rose",
      "type": "node",
      "cwd": "${workspaceRoot}/gildedrose/typescript",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/gildedrose/typescript/node_modules/jest/bin/jest.js",
